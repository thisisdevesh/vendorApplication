<?xml version="1.0" encoding="utf-8"?>

    <!--card_view:cardUseCompatPadding="true"-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight=".25">
            <RelativeLayout
                android:id="@+id/drvCallingLay"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                android:layout_gravity="center"
                android:background="@drawable/ic_circle_black"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/vdrCallingLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/vendorCallImg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_call_icon_white" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/gfd"
            android:layout_weight=".75"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8"
            android:gravity="left|center"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:enabled="false"
                    android:focusable="false"
                    android:drawableLeft="@drawable/ic_test_vendor"
                    android:drawablePadding="@dimen/dp15"
                    android:textSize="16sp"
                    android:text="Ramesh"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/phoneNO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:enabled="false"
                    android:focusable="false"
                    android:drawableLeft="@drawable/ic_mobile_icon"
                    android:drawablePadding="@dimen/dp15"
                    android:textSize="16sp"
                    android:text="3322554477"
                    android:textColor="@color/black" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/cabNumber"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:padding="@dimen/dp5"
                   android:enabled="false"
                   android:focusable="false"
                   android:drawableLeft="@drawable/ic_name_plate"
                   android:drawablePadding="@dimen/dp15"
                   android:textSize="16sp"
                   android:text="256"
                   android:textColor="@color/black" />
               <TextView
                   android:id="@+id/cabName"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:padding="@dimen/dp5"
                   android:enabled="false"
                   android:focusable="false"
                   android:drawableLeft="@drawable/ic_car"
                   android:drawablePadding="@dimen/dp15"
                   android:textSize="16sp"
                   android:text="256"
                   android:textColor="@color/black" />

           </LinearLayout>



            <TextView
                android:id="@+id/verified_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp16"
                android:text="Not Verified"
                android:textColor="@color/busy_color" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

