<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ActivityOfferList">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_offers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Bonus List"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/noOffer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Offers Now"
        android:textStyle="bold"
        android:visibility="gone"
        android:textSize="@dimen/dimen_20sp"
        android:textColor="@color/dark_red"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/offers_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_25dp"
        android:layout_marginEnd="@dimen/dimen_25dp"
        android:layout_marginTop="@dimen/dimen_10dp"/>

</LinearLayout>